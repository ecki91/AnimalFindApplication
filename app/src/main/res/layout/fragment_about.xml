<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hu.bme.aut.animalfindapplication.ui.about.AboutFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="312dp"
        android:layout_height="114dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Eklics Norbert Mobilszoftver-laboratórium házi feladat                                  (2016)"
        android:id="@+id/aboutTextView"
        android:layout_gravity="center"
        android:textColor="#1b44b3"
        android:textAlignment="gravity"
        style="@style/Base.Animation.AppCompat.DropDownUp" />

    <ImageView
        android:layout_width="127dp"
        android:layout_height="170dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/dogicon" />

    <TextView
        android:layout_width="181dp"
        android:layout_height="208dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal|bottom"
        android:text="Animal Find App. version 1.0            All rights reserved 2016" />

</FrameLayout>
